
<h2> <%= @player_label %> <%=@player_name %> hand </h2>
<div class='hand'>
  <p>Total : <span class='total'><%=@user_total%></span></p>
  <p><%=show_cards(@user_hand)%></p>
</div>

<h2>Dealer's hand.</h2> 
<div class='hand'>
  <p>Total : <span class='total'><%=@dealer_total%></span></p>
  <p> <%=show_cards(@dealer_hand)%></p>
</div>

<div class='text-container'>
  <div class='opacity'></div>
  <div class='text-result'>
    <h1 class='result-text' style='text-align:center'> <%=@message%></h1>
    <h2 class='result-text' style='text-align:center'> Now you have $<%=@money%></h2>

  <% if @money > 0 %>
    <div class='align-center'>
      <a href='/game/bet' class='btn btn-info btn-large'> Play Again </a>
      <a href='/game/results/take_my_money' class='btn btn-warning btn-large'> Take my money </a>
    </div>
  <%else %>
    <div class='align-center'>
      <h3 class='result-text'>You don't have any money please go out the casino</h3>
      <img class='small-image' alt='go out' src='/images/security.png'/>
      <a href='/close_game' class='btn btn-danger btn-large'> Go Out </a>
    </div>
  <%end %>
    </div>
</div>